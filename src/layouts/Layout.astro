---
import "@fontsource/viga";
import "@fontsource/fredoka-one";
import "@fontsource/montserrat-alternates";
import { ViewTransitions } from "astro:transitions";
import { Image } from "astro:assets";

import light_green from "../utils/images/light_green.png";
import light_violet from "../utils/images/light_violet.png";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="portfolio web" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <ViewTransitions />
    </head>
    <body>
        <slot />
        <Image class="light_violet" src={light_violet} alt="" />
        <Image class="light_green" src={light_green} alt="" />
        <style is:global>
            :root {
                --accent: 136, 58, 234;
                --accent-light: 224, 204, 250;
                --accent-dark: 49, 10, 101;
                --accent-gradient: linear-gradient(
                    45deg,
                    rgb(var(--accent)),
                    rgb(var(--accent-light)) 30%,
                    white 60%
                );
                --blue: #000000;
                --blue-card: #04172b;
                --blue-light: #1089ff;
                --white: #ffffff;
                --cursorXPos: 50vw;
                --cursorYPos: 50vh;
            }
            html {
                font-family: system-ui, sans-serif;
                background: var(--blue);
                background-size: 224px;
                scroll-behavior: smooth;
                padding: 12px;
            }
            code {
                font-family:
                    Menlo,
                    Monaco,
                    Lucida Console,
                    Liberation Mono,
                    DejaVu Sans Mono,
                    Bitstream Vera Sans Mono,
                    Courier New,
                    monospace;
            }
            h1,
            h2 {
                font-family: "viga", system-ui;
                color: orange;
                font-size: 1.5rem;
            }
            p,
            a {
                font-family: "Montserrat Alternates", sans-serif;
                color: white;
            }
            section {
                background: var(--blue);
            }
            .row_flex {
                display: flex;
                justify-content: space-around;
            }
            .card {
                border-radius: 1rem;
                background-color: var(--blue-card);
                padding: 1rem;
                background: rgb(37, 37, 37);
                background: linear-gradient(
                    140deg,
                    rgba(37, 37, 37, 1) 0%,
                    rgba(0, 0, 0, 1) 100%
                );
                display: flex;
                flex-direction: column;
                position: relative;
            }
            .arrow {
                position: absolute;
                right: 1rem;
                width: 30px;
                filter: brightness(50%);
                transform: rotate(-90deg);
            }
            .light_violet {
                position: fixed;
                bottom: 0;
                left: 0;
                z-index: -1;
            }
            .light_green {
                position: absolute;
                top: 0;
                right: 0;
                z-index: -1;
            }

            .parent {
                display: flex;
                gap: 12px;
                flex-wrap: wrap;
            }
            .div1 {
                padding: 5px;
            }
            .div2,
            .div10 {
                background-image: url("../utils/images/BG2.jpg");
            }
            .div10,
            .div11 {
                width: 45%;
            }
            .social {
                flex-wrap: wrap;
                gap: 10px;
            }
            @media screen and (min-width: 400px) {
                .div1 {
                    width: 40%;
                }
                .div2 {
                    width: 55%;
                }
                .div3 {
                    display: none;
                }
                .div4 {
                    width: 100%;
                }
                .div6,
                .div7 {
                    width: 47%;
                }
                .div10,
                .div11 {
                    width: 47%;
                }
            }
            @media screen and (min-width: 680px) {
                .parent {
                    display: grid;
                    grid-template-columns: repeat(6, 1fr);
                    grid-template-rows: repeat(6, 1fr);
                    grid-column-gap: 10px;
                    grid-row-gap: 10px;
                    padding: 0.5rem;
                }
                .card {
                    width: 100%;
                }
                .div1 {
                    grid-area: 1 / 1 / 3 / 2;
                    display: flex;
                    justify-content: center;
                    align-items: center;
                }
                .div2 {
                    grid-area: 1 / 2 / 2 / 4;
                    background-image: url("../utils/images/BG2.jpg");
                }
                .div3 {
                    grid-area: 1 / 4 / 2 / 5;
                    display: flex;
                }
                .div4 {
                    grid-area: 1 / 5 / 4 / 7;
                }
                .div5 {
                    grid-area: 2 / 2 / 4 / 5;
                }
                .div6 {
                    grid-area: 3 / 1 / 4 / 2;
                }
                .div7 {
                    grid-area: 4 / 1 / 6 / 3;
                }
                .div8 {
                    grid-area: 5 / 3 / 7 / 5;
                }
                .div9 {
                    grid-area: 4 / 3 / 5 / 5;
                }
                .div10 {
                    grid-area: 6 / 1 / 7 / 2;
                    background-image: url("../utils/images/BG2.jpg");
                }
                .div11 {
                    grid-area: 6 / 2 / 7 / 3;
                }
                .div12 {
                    grid-area: 4 / 5 / 7 / 7;
                }
            }
        </style>
    </body>
</html>
