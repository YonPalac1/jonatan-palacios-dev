---
import { Image } from "astro:assets";
import { SKILLS } from "../constants/index";
import left from "../utils/images/left.png"
import right from "../utils/images/right.png"
---
<div class="card div9">
    <h2>Skills</h2>
    <div class="row_flex skills">
        {
            SKILLS.map((item, i) => {
                return (
                    <Image
                        src={item.img}
                        class="w-[50px]"
                        alt="item.name"
                    />
                );
            })
        }
    </div>
    <div class="arrows">
        <button><Image src={left} alt=""></Image></button>
        <button><Image src={right} alt=""></Image></button>
    </div>
</div>
<style>
    .skills {
        overflow: auto;
    }
    .arrows {
        position: absolute;
        left: 1rem;
        bottom: 0;
    }
    button {
        border: 1px solid #ccc;
        border-radius: 50%;
        filter: brightness(50%)
    }
</style>